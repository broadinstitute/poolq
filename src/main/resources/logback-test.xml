<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="false" debug="false">

  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>[%level] %msg%n</pattern>
    </encoder>
  </appender>

  <root level="INFO">
    <appender-ref ref="stdout" />
  </root>

</configuration>
